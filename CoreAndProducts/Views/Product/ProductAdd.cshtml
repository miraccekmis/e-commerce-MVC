@model CoreAndProducts.Data.Models.AddProduct
@{
    ViewData["Title"] = "ProductAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ÜRÜN EKLE</h1>
<br />
<form class="form-group" action="ProductAdd" asp-controller="Product" method="post" enctype="multipart/form-data">
    @Html.Label("ÜRÜN ADI")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("FİYAT")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("STOK SAYISI")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.Label("RESİM")
    <input type="file" name="ImageURL" />
    <br />
    @Html.Label("KATEGORİ")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    <br />
    @Html.Label("AÇIKLAMA")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">KAYDET</button>
</form>

