@using X.PagedList;
@using X.PagedList.Mvc.Core
@model IPagedList<CoreAndProducts.Data.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>ÜRÜN LİSTESİ</h1>
<br />
@*@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}*@
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN İSMİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAY</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ProductID</th>
            <td>@x.Name</td>
            <td>@x.Price</td>
            <td>@x.Stock</td>
            <td>@x.Category.CategoryName</td>
            <td><a href="/Product/ProductDelete/@x.ProductID" class="btn btn-danger">SİL</a> </td>
            <td><a href="/Product/ProductGet/@x.ProductID" class="btn btn-success">GÜNCELLE</a> </td>
            <td><a href="#" class="btn btn-info">DETAY</a> </td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<a href="/Product/ProductAdd/" class="btn btn-primary">YENİ ÜRÜN</a>

